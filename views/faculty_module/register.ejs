<section class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a href="/faculty"><b>Faculty </b> <i class="fas text-primary fa-cloud"></i> System</a>
  </div>
  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Register a new membership</p>
      <form action="/users/registerFaculty" id="usersRegistration-form" method="POST">
        <%- include('../partials/messages')  %>
        <div class="input-group mb-3">
          <input type="name" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" required="required" pattern="^([- \w\d\u00c0-\u024f]+)$" class="form-control" placeholder="Full name">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="email" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" required="required" pattern="^(([-\w\d]+)(\.[-\w\d]+)*@([-\w\d]+)(\.[-\w\d]+)*(\.([a-zA-Z]{2,5}|[\d]{1,3})){1,2})$" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
            <input type="phone" id="phone" name="phone" value="<%= typeof phone != 'undefined' ? phone : '' %>" required="required" class="form-control" placeholder="Phone Number">
            <div class="input-group-append">
              <div class="input-group-text">
                <i class="fas fa-phone"></i>
              </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input type="phone" id="department" name="department" value="<%= typeof department != 'undefined' ? department : '' %>" required="required" class="form-control" placeholder="Department">
            <div class="input-group-append">
              <div class="input-group-text">
                <i class="fas fa-building"></i>
              </div>
            </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" id="password" name="password" required="required" value="<%= typeof password != 'undefined' ? password : '' %>" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" id="password2" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required="required" class="form-control" placeholder="Retype password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="agreeTerms" name="terms" value="agree">
              <label for="agreeTerms">
               I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div>
        </div>
        <button type="button" id="registerUser-btn" class="btn mt-4 mb-4 btn-primary btn-block">Register</button>
      </form>
      <a href="/faculty" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
</section>

